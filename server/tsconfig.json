{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/types/middleware/*.d.ts", "src/index.ts"],
  "exclude": ["node_modules"],
  "lib": ["esnext"]
}
